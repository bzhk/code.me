<div class="container" >
    <h1 class="text-center">Dodaj ogłoszenie</h1>
    <form action="/dodaj_ogloszenie" method="POST">
      <div class="form-group row">
          <div class="col-md-offset-3 col-md-6">
              <label for="titleInput">Tytuł ogłoszenia</label>
              <input id="titleInput" class="form-control" type="text" value="{{form.title}}" placeholder="Tytuł ogłoszenia" name="title">
          </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-3 col-md-3">
              <label for="minSalaryInput">Stawka minimalna</label>
                <input id="minSalaryInput" class="form-control" type="text" value="{{form.minSalary}}" placeholder="Stawka minimalna" name="minSalary">
            </div>

            <div class="col-md-3">
              <label for="maxSalaryInput">Stawka maksymalna</label>
                <input if="maxSalaryInput" class="form-control" type="text" value="{{form.maxSalary}}" placeholder="Stawka maksymalna" name="maxSalary">
            </div>
      </div>
      <div class="form-group row">
        <div class="col-md-offset-3 col-md-3">
          <label for="salaryTypeInput">Okres płatności</label>
            <select id="salaryTypeInput" class="form-control" value="{{form.salaryType}}" name="salaryType">
              <option value="perH">na godzinę</option>
              <option value="perW">na tydzień</option>
              <option value="perM">na miesiąc</option>
            </select>
          </div>
            <div class="col-md-3">
              <label for="remoteInput">Praca zdalna</label>
                <select id="remoteInput" class="form-control" type="text" value="{{form.remote}}" placeholder="Praca zdalna" name="remote">
                    <option value="yes">tak</option>
                    <option value="no">nie</option>
                </select>
            </div>
      </div>
      <div class="form-group row">
          <div class="col-md-offset-3 col-md-6">
              <label for="briefInput">Krótka treść ogłoszenia</label>
              <textarea id="briefInput" class="form-control" type="text" placeholder="Treść ogłoszenia" name="content.brief">
                </textarea>
          </div>
        </div>
      <div class="form-group row">
          <div class="col-md-offset-3 col-md-6">
              <label for="extendedInput">Długa treść ogłoszenia</label>
              <textarea id="extendedInput" class="form-control" type="text" placeholder="Treść ogłoszenia" name="content.extended">
                </textarea>
          </div>
        </div>

        <div class="form-group row text-center">
            <div class="col-md-offset-3 col-md-6">
              <label for="sendBtn" class="sr-only">Wyślij</label>
                <button id="sendBtn" class="btn btn-info" type="submit">Wyślij</button>
            </div>
        </div>
    </form>
</div>
<script src="//cdn.ckeditor.com/4.6.2/basic/ckeditor.js"></script>
<script type="text/javascript">
   CKEDITOR.replace( 'extendedInput' )
   CKEDITOR.replace( 'briefInput' )
</script>
