<div class="container" >
    <h1 class="text-center">Rejestracja</h1>

    <br>

    <form action="/rejestracja" method="POST">
      <div class="form-group row">
          <div class="col-md-offset-3 col-md-6">
              <input class="form-control" type="text" placeholder="Nazwa użytkownika" name="nick">
          </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-3 col-md-6">
                <input class="form-control" type="email" value="{{form.email}}" placeholder="Adres e-mail" name="email">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-3 col-md-6">
                <input class="form-control" type="email" placeholder="Powtórz e-mail" name="emailRep">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-3 col-md-3">
                <input class="form-control" type="text" value="{{form.firstname}}" placeholder="Imię" name="firstname">
            </div>

            <div class="col-md-3">
                <input class="form-control" type="text" value="{{form.lastname}}" placeholder="Nazwisko" name="lastname">
            </div>
        </div>
        <div class="form-group row">

            <div class="col-md-offset-3 col-md-6">
                <input class="form-control" type="password" placeholder="Hasło" name="password">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-3 col-md-6">
                <input class="form-control" type="password" placeholder="Powtórz hasło" name="passwordRep">
            </div>
        </div>
        <div class="form-group row">
            <div class="checkbox col-md-offset-3 col-md-6 text-center">
               <label><input type="checkbox" name="agr"> Akceptuje regulamin serwisu Code.me.</label>
             </div>
        </div>

        <div class="form-group row text-center">
            <div class="col-md-offset-3 col-md-6">
                <button class="btn btn-info" type="submit">Zarejestruj się</button>
            </div>
        </div>
    </form>
</div>
